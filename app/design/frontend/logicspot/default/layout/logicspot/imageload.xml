<layout version="0.1.0">
    <default>
        <reference name="delayed_js">
            <block type="core/template" name="logicspot.imageload" as="imageload" before="-" template="logicspot/imageload/imageload.phtml" />
        </reference>
    </default>
    <catalog_category_default>
        <reference name="delayed_js">
            <action method="addJs"><script>logicspot/imageload.js</script></action>
        </reference>
    </catalog_category_default>
    <catalog_category_layered>
        <reference name="delayed_js">
            <action method="addJs"><script>logicspot/imageload.js</script></action>
        </reference>
    </catalog_category_layered>
</layout>